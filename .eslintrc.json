{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "overrides": [
        {
            "files": ["*.test.js"],
            "plugins": ["jest"],
            "env": {
                "jest/globals": true
            }
        }
    ],
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "brace-style": ["warn", "stroustrup"],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "warn",
            "never"
        ],
        "no-unused-vars": [
            "warn",
            {}
        ]
    },
    "ignorePatterns": [
        "build/*.js",
        "output/"
    ]
}

