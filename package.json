  "main": "src/index.js",
  "scripts": {
    "start": "npm run start-server && npm run start-scraping",
    "start-server": "node --experimental-specifier-resolution=node --trace-warnings src/server",
    "start-scraping": "node --experimental-specifier-resolution=node src",
    "start-dev": "parcel watch src/utils/browser-globals.js --no-hmr --dist-dir=build",
    "test": "TZ=UTC NODE_OPTIONS=--experimental-vm-modules npx jest"
  },
  "browser": "build/browser-globals.js",
  "targets": {
    "main": false,
    "browser": {
      "minify": false,
      "sourceMap": false,
      "outputFormat": "global",
      "includeNodeModules": true
    }
  },
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@koa/router": "^10.0.0",
    "date-fns": "^2.16.1",
    "dotenv-yaml": "^0.1.4",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "koa": "^2.13.1",
    "node-fetch": "^2.6.1",
    "parcel": "^2.0.0-beta.1",
    "puppeteer": "^5.5.0",
    "puppeteer-extra": "^3.1.15",
    "puppeteer-extra-plugin-stealth": "^2.6.5",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/eslint-parser": "^7.12.1",
